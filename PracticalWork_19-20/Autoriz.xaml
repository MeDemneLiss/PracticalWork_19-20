<Window x:Class="PracticalWork_19_20.Autoriz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork_19_20"
        mc:Ignorable="d"
        Title="Авторизация" Height="164" Width="199">
    <Grid>
        <StackPanel>
            <Label>Пользователь</Label>
            <TextBox x:Name="txtLogin"></TextBox>
            <Label>Пароль</Label>
            <PasswordBox x:Name="txtPas" PasswordChar="*"/>
            <Button Content="Войти" IsDefault="True" Click="Enter"></Button>
            <Button Content="Отмена" IsCancel="True" Click="Esc"></Button>
        </StackPanel>
    </Grid>
</Window>
